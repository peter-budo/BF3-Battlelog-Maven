<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
>  
	<View 
	    android:layout_width="10dp"
	    android:layout_height="fill_parent" 
	    android:id="@+id/bar_official" 
	    android:background="@color/lightgrey"
	    android:layout_alignParentLeft="true"
	    
	/>
	<RelativeLayout
	    android:id="@+id/wrap_top"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/bar_official"
  		android:padding="5dp"
  		android:layout_centerVertical="true"
	>
		<TextView 
		    android:id="@+id/string_title"
			android:text="Battlefield 3 (PS3, XBOX 360)"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/blue"
			android:textStyle="bold"
			android:ellipsize="marquee"
		/>
		<TextView 
		    android:id="@+id/string_owner"
			android:text="@string/info_xml_threaddate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/string_title"
		/>
		<TextView 
		    android:id="@+id/string_post_last"
			android:text="@string/info_xml_threadreplydate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/string_owner"
		/>
		<TextView 
		    android:id="@+id/string_info"
			android:text="@string/info_xml_threadinfo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#AAAAAA"
			android:textSize="12sp"
			android:layout_below="@id/string_post_last"
		/>
	</RelativeLayout>
</RelativeLayout>